                android:fontFamily="sans-serif-medium" />

            <Button
                android:text="Mechanical Engineering"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bt11"
                android:layout_marginTop="11dp"
                android:layout_below="@+id/bt10"
                android:layout_alignParentStart="true"
                style="@android:style/Widget.Button"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:text="Mechatronics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bt12"
                android:layout_marginTop="11dp"
                android:layout_below="@+id/bt11"
                android:layout_alignParentStart="true"
                style="@android:style/Widget.Button"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:text="Power Engineering"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bt13"
                android:layout_marginTop="11dp"
                android:layout_below="@+id/bt12"
                android:layout_alignParentStart="true"
                style="@android:style/Widget.Button"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:text="Tool Engineering"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bt14"
                android:layout_marginTop="11dp"
                android:layout_below="@+id/bt13"
                android:layout_alignParentStart="true"
                style="@android:style/Widget.Button"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:text="About Developer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bt15"
                android:layout_marginTop="11dp"
                android:layout_below="@+id/bt14"
                android:layout_alignParentStart="true"
                style="@android:style/Widget.Button"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium" />


            </LinearLayout>
    </ScrollView>
</RelativeLayout>