<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.something.kumaranurag.ggsipusyllabus.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sv1"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/llv1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Stream"
                android:textSize="30sp"
                android:textStyle="normal|bold"
                android:id="@+id/tv1"
                android:layout_marginTop="9dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textAlignment="center" />

            <Button
                android:text="Common to all Branches (1st Year)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:id="@+id/bt1"
                android:layout_below="@+id/tv1"
                android:layout_alignParentStart="true"
                android:elevation="0dp"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium"
                style="@android:style/Widget.Button" />

            <Button
                android:text="Computer Science and Engineering"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bt2"
                android:layout_marginTop="11dp"
                android:layout_below="@+id/bt1"
                android:layout_alignParentStart="true"
                android:textAlignment="viewStart"
                android:fontFamily="sans-serif-medium"
                style="@android:style/Widget.Button"
                android:textAllCaps="true" />

            <Button
                android:text="Civil Engineering"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bt3"
                android:layout_marginTop="11dp"
                android:layout_below="@+id/bt2"
                android:layout_alignParentStart="true"
                style="@android:style/Widget.Button"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:text="Electronics and Communication Engineering"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bt4"
                android:layout_marginTop="11dp"
                android:layout_below="@+id/bt3"
                android:layout_alignParentStart="true"
                style="@android:style/Widget.Button"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:text="Electrical Engineering"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bt5"
                android:layout_marginTop="11dp"
                android:layout_below="@+id/bt4"
                android:layout_alignParentStart="true"
                style="@android:style/Widget.Button"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:text="Electrical and Electronics Engineering"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bt6"
                android:layout_marginTop="11dp"
                android:layout_below="@+id/bt5"
                android:layout_alignParentStart="true"
                style="@android:style/Widget.Button"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:text="Environmental Engineering"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bt7"
                android:layout_marginTop="11dp"
                android:layout_below="@+id/bt6"
                android:layout_alignParentStart="true"
                style="@android:style/Widget.Button"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:text="Instrumentation and Control Engineering"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bt8"
                android:layout_marginTop="11dp"
                android:layout_below="@+id/bt7"
                android:layout_alignParentStart="true"
                style="@android:style/Widget.Button"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:text="Information Technology"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bt9"
                android:layout_marginTop="11dp"
                android:layout_below="@+id/bt8"
                android:layout_alignParentStart="true"
                style="@android:style/Widget.Button"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:text="Mechanical and Automation Engineering"
