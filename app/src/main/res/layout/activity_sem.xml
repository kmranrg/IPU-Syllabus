<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/svs1"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/llvs1" >

            <TextView
                android:id="@+id/tvs1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:text="SEMESTER"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/bts1"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"
                android:layout_alignParentStart="true"
                android:layout_marginTop="22dp"
                android:backgroundTint="@color/colorPrimary"
                android:elevation="0dp"
                android:fontFamily="sans-serif-medium"
                android:text="SEMESTER 1"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/bts2"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt1"
                android:layout_alignParentStart="true"
                android:layout_marginTop="11dp"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="sans-serif-medium"
                android:text="SEMESTER 2"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/bts3"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt2"
                android:layout_alignParentStart="true"
                android:layout_marginTop="11dp"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="sans-serif-medium"
                android:text="SEMESTER 3"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/bts4"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt3"
                android:layout_alignParentStart="true"
                android:layout_marginTop="11dp"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="sans-serif-medium"
                android:text="SEMESTER 4"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/bts5"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt4"
                android:layout_alignParentStart="true"
                android:layout_marginTop="11dp"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="sans-serif-medium"
                android:text="SEMESTER 5"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/bts6"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt5"
                android:layout_alignParentStart="true"
                android:layout_marginTop="11dp"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="sans-serif-medium"
                android:text="SEMESTER 6"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/bts7"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt6"
                android:layout_alignParentStart="true"
                android:layout_marginTop="11dp"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="sans-serif-medium"
                android:text="SEMESTER 7"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/bts8"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt7"
                android:layout_alignParentStart="true"
                android:layout_marginTop="11dp"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="sans-serif-medium"
                android:text="SEMESTER 8"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>